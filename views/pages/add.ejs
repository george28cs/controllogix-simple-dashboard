<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>
<main>
  <form action="<% action %>" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">Tag Name</label>
      <input name="name" type="text" class="form-control" placeholder="Tag name (same tag controller/program name)" required>
    </div>
    <div class="mb-3">
      <label for="type_id" class="form-label">Data type</label>
      <select name="type_id" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
        <option value="" selected disabled="disabled">Please select Tag data type</option>
        <% data.data_types.forEach( type => { %>
          <option value="<%= type.id %>"><%= type.type %></option>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label for="scope" class="form-label">Scope (If you choose "Program" label, you must specify "program name".)</label>
      <select name="scope" class="form-select form-select-sm" aria-label=".form-select-sm" onchange="enableDisableTextBox(this)" id="scopeForm" required>
        <option selected value="controller">Controller</option>
        <option value="program">Program</option>
      </select>
      <input name="program" type="text" class="form-control program-name" id="scope" placeholder="Program name">
    </div>
    <% if(error) { %>
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
        <div>
          An error ocurred, please try again
        </div>
      </div>
    
    <%} %>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-primary btn-lg">Save tag</button>
    </div>
  </form>

</main>

<footer class="footer container-fluid text-center">
    <%- include('../partials/footer'); %>
</footer>

<script src="../js/add.js"></script>
</body>
</html>
